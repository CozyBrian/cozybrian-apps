{
  "name": "cozybrian",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "start-web": "turbo run web#start @cozy/ui#dev @cozy/styling#dev",
    "dev-web": "turbo run web#dev @cozy/ui#dev @cozy/styling#dev",
    "build-web": "turbo run web#build",
    "start-blog": "turbo run blog#start @cozy/ui#dev @cozy/styling#dev",
    "dev-blog": "turbo run blog#dev @cozy/ui#dev @cozy/styling#dev",
    "build-blog": "turbo run blog#build",
    "start-admin": "turbo run admin#start @cozy/ui#dev @cozy/styling#dev",
    "dev-admin": "turbo run admin#dev @cozy/ui#dev @cozy/styling#dev",
    "build-admin": "turbo run admin#build",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "syncpack": "^14.0.0-alpha.13",
    "turbo": "^2.5.4",
    "typescript": "~5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.10",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@tailwindcss/cli": "^4.1.8",
    "@tailwindcss/postcss": "^4.1.8",
    "@tanstack/react-query": "^5.80.7",
    "better-auth": "^1.2.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.514.0",
