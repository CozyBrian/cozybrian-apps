{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "DATABASE_URL", 
        "DIRECT_URL", 
        "RESEND_API_KEY", 
        "BETTER_AUTH_SECRET", 
        "BETTER_AUTH_URL", 
        "VITE_BETTER_AUTH_URL",
        "NEXT_PUBLIC_BLOG_URL",
        "NEXT_PUBLIC_HOME_URL",
        "NODE_ENV"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false,
      "env": ["DATABASE_URL", "DIRECT_URL"]
    },
    "lint:fix": {
      "outputs": []
    }
  }
}
